import * as inspect from 'inspect.js'
import FirescriptRuntime from '..'

describe('FirescriptRuntime', () =>
  describe('class', () =>
    it('should return a static class', () =>
      inspect(FirescriptRuntime).isClass()
    )

    it('should have a typing method', () =>
      inspect(FirescriptRuntime.typing).isFunction()
    )
  )

  describe('red', () =>
    it('returns a FireRegExp', () =>
      const reg = FirescriptRuntime.reg(/\d/)
      inspect(reg).isInstanceOf(RegExp)
    )
  )
)
